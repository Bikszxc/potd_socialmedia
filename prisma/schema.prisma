generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  
  // Custom fields
  discordId     String?   @unique
  username      String?   @unique // In-game username
  faction       String?
  role          String    @default("USER") // USER, ADMIN
  isVerified    Boolean   @default(false)
  
  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  // ... Character relation
  // ... Character relation
  factionJoined FactionMember?
  ownedFaction  Faction?
  applications  FactionApplication[]
  
  characters    Character[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// ... (other models) ...

enum FactionRole {
  LEADER
  MODERATOR
  MEMBER
}

model Faction {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  
  // Who owns it?
  ownerId     String   @unique
  owner       User     @relation(fields: [ownerId], references: [id])
  
  members     FactionMember[]
  applications FactionApplication[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model FactionMember {
  id        String      @id @default(cuid())
  factionId String
  userId    String      @unique // One faction per user
  role      FactionRole @default(MEMBER)
  
  faction   Faction     @relation(fields: [factionId], references: [id], onDelete: Cascade)
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  joinedAt  DateTime    @default(now())
}

model FactionApplication {
  id        String   @id @default(cuid())
  factionId String
  userId    String
  message   String?
  status    String   @default("PENDING") // PENDING, REJECTED (Accepted deletes this and makes Member)
  
  faction   Faction  @relation(fields: [factionId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
}

model PendingCommand {
  id        String   @id @default(cuid())
  type      String   // e.g. "ADD_MEMBER"
  payload   String   // JSON or Pipeline separated format: "username|factionName"
  processed Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}


// Default NextAuth verification token
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// In-game auto-generated codes
model VerificationCode {
  id        String   @id @default(cuid())
  code      String   @unique // The 6 digit code
  username  String   // In-game username it belongs to
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Post {
  id        String   @id @default(cuid())
  content   String
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Character {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  fullName      String    // "Jack Sawyer"
  isAlive       Boolean   @default(true)
  
  // Stats
  zombiesKilled Int       @default(0)
  hoursSurvived Float     @default(0)
  profession    String?
  traits        String[]  // Stored as array of strings
  
  diedAt        DateTime?
  bornAt        DateTime  @default(now()) // When this character was first seen/created
  updatedAt     DateTime  @updatedAt
  
  @@index([userId])
}
